<launch>
  <param name="/use_sim_time" value="true" />

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find jackal_cartographer_navigation)/config
          -configuration_basename final_robot_3d.lua"
      output="screen">
      <remap from="scan" to="/front/scan"/>
      <remap from="odom" to="/jackal_velocity_controller/odom"/>
      <!-- <remap from="odom" to="/odometry/filtered"/> -->
      <remap from="imu" to="/imu/data"/>
      <remap from= "points2" to="/mid/points"/>
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
  
  <!-- <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_ros)/configuration_files/demo_3d.rviz" /> -->
      <!-- Launch Rviz with our settings -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find me5413_world)/rviz/gmapping.rviz" output="log" respawn="true"/>

  
  <node name="playbag" pkg="rosbag" type="play"
      args="--clock $(arg bag_filename)" />
</launch>
